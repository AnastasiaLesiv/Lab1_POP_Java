 private static class MainThread extends Thread {
        @Override
        public void run() {
            int step = 2; 
            long sum = 0; 
            long countElement = 0; 
            int localThreadId = threadId++;

            while (!isBreak.get()) {
                sum += step;
                countElement++;
            }

            System.out.println("Thread " + localThreadId + ": Sum = " + sum + ", Number of elements: " + countElement);
        }
    }
